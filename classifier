#!/usr/bin/env python

from pathlib import Path

from lib import *
from lib.datasets import PostsLoader


def main() -> None:
    # print(f"Accuracy: {100 * score_classifier()}%")

    loader = PostsLoader(Path("posts_corpus"))
    classifier = TextClassifier.from_training(loader.take())
    print(classifier.predict("2k hours, looking for a squad to raid with"))
    print(classifier.predict("What is the memory usage of String::new?"))


if __name__ == "__main__":
    main()
